                 <TableView Intent="Form">
        <TableRoot>
            <TableSection Title="License Information" >
         <EntryCell Label="License Number" ></EntryCell>
                 <EntryCell Label="Verified by"></EntryCell>
</TableSection>
                
                
            <TableSection Title="Valid time">
        <ViewCell >
       <StackLayout  Orientation="Horizontal"  Padding="13,5">
 <Label Text="From" VerticalOptions="Center"></Label>
<DatePicker Date="1 Jan 2038" HorizontalOptions="EndAndExpand"> </DatePicker>
 </StackLayout>   
</ViewCell>
                    
              <ViewCell>
               <StackLayout  Orientation="Horizontal"  Padding="13,5">     
                      <Label Text="To" VerticalOptions="Center"></Label>
                <DatePicker Date="1 Jan 2038" HorizontalOptions="EndAndExpand"> </DatePicker>
                  </StackLayout> 
                  </ViewCell>
                  </TableSection>
            
            
            
                
                <TableSection Title="Upload your license  copy">     
    <ViewCell >
    <StackLayout Orientation="Horizontal" Padding="10">
        <Button Text="Take  photo" TextColor="Black"  Clicked="TakePhoto_Clicked"  ></Button>
       <Image Source="takePhoto.png" HeightRequest="250"  WidthRequest="50"></Image>
   </StackLayout>
          </ViewCell> 
                    
             <ViewCell >
    <StackLayout Orientation="Horizontal" Padding="10">
  <Button Text="Upload  photo" TextColor="Black" Clicked="PickPhoto_Clicked"  ></Button>
                        <Image Source="upload.png" HeightRequest="250" WidthRequest="50"></Image>
   </StackLayout>
          </ViewCell> 
                    
                    
                    
                     <ViewCell >
                        <Grid>
       <Grid.RowDefinitions>
                                <RowDefinition Height="230"></RowDefinition>
                            </Grid.RowDefinitions>                     
                            
                            
         <Image    x:Name="image" BackgroundColor="White" Aspect="AspectFill" ></Image>  

         </Grid>
  
          </ViewCell> 
                    
                    
      </TableSection> 
                
                
                
                
                
                     
