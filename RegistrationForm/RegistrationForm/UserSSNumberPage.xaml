<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local="clr-namespace:RegistrationForm" 
             
             
          xmlns:Validators="clr-namespace:RegistrationForm.Validators.Implementations"
             xmlns:Behaviors="clr-namespace:RegistrationForm.Behaviors"
            x:Class="RegistrationForm.UserSSNumberPage">
 
    

   <StackLayout Padding="60"  HorizontalOptions="Center" VerticalOptions="Center">
        <Label Margin="20">Enter SSN Number</Label>
        <Entry x:Name="ssnNum" Placeholder="ssn">
            <Entry.Behaviors>
                <Behaviors:ValidationBehavior PropertyName="Text">
                    <Behaviors:ValidationBehavior.Validators>
                        <Validators:RequiredValidator />
                        <Validators:FormatValidator
                            Message="SSN number must be valid 9 digit" 
                            Format="^\d{3}?\d{2}?\d{4}$" />
                    </Behaviors:ValidationBehavior.Validators>
                </Behaviors:ValidationBehavior>
            </Entry.Behaviors>
        </Entry>
        
        <Entry  x:Name="ssnConf" Margin="0,20" Placeholder="Confirm ssn">
            <Entry.Behaviors>
                <Behaviors:ValidationBehavior PropertyName="Text">
                    <Behaviors:ValidationBehavior.Validators>
                        <Validators:RequiredValidator />
                        <Validators:FormatValidator
                            Message="SSN number must be valid 9 digit" 
                            Format="^\d{3}?\d{2}?\d{4}$" />
                    </Behaviors:ValidationBehavior.Validators>
                </Behaviors:ValidationBehavior>
            </Entry.Behaviors>
        </Entry>
        
        <Button Text="Submit" FontSize="Large" Clicked="Handle_Clicked"> </Button>
        
        
    </StackLayout>
</ContentPage>  
    
    
  
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
